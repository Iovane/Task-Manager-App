<div class="container mt-5">
  <h1>Log in</h1>
</div>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>


<body>
<div class="container mt-5">
  <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>


    <div class="form-group">
      <%= form.submit "Log in" ,class: "btn btn-primary" %>
      <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>



</div>
</body>

