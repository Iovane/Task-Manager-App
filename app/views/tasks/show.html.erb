<h2 class="text-center mt-4"><%= @task.title %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">

        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@task.description) %></div>
        </div>

        <div class="attachment">
          Deadline: <%= @task.deadline %>
          <div class="task" style="color: <%= status_color(@task.status) %>">
            <%= @task.status %> </div>
        </div>
        <br>

        <div>
        </div>

        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@task.created_at) %> ago,
            edited <%= time_ago_in_words(@task.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="text-center"> <%= link_to "Go back", tasks_path, class: "btn btn-outline-dark" %>
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-info" %>
      <%= link_to "Delete", task_path(@task), class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>